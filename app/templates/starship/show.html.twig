{%  extends 'base.html.twig' %}

{% block title %}{{ ship.name }}{% endblock %}

{% block body %}
    <div>
        <a href="{{ path('app_homepage') }}">Go back</a>
    </div>
<h1>{{ ship.name }}</h1>
<table>
    <tr>
        <th>Class</th>
        <td>{{ ship.class }}</td>
    </tr>
    <tr>
        <th>Captain</th>
        <td>{{ ship.captain }}</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>{{ ship.statusString }}</td>
    </tr>
</table>

{% endblock %}